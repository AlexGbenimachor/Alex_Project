<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple_700"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/notUserName"
        android:layout_margin="10dp"
        android:text="Alex Gbenimachor"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notMessageTitle"
        android:text="Message:"
        android:layout_below="@id/notUserName"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notSystemMessage"
        android:text="The User made an Order, Please check the Order, Using the Order ID Below"
        android:layout_below="@id/notMessageTitle"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notUserOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notSystemMessage"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="userID-0"
        android:textColor="#009688"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />





</RelativeLayout>