<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userProfile_title"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_Title"
                android:textAlignment="center"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/user_profile"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- user image-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/imageProfile_layout"
            android:layout_margin="10dp"
            android:layout_below="@id/userProfile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/usr_imageProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/showProfileImage"
                android:src="@drawable/userslogo"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!--user email Address-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailAddress_layout"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageProfile_layout">
            <TextView
                android:text="@string/email_address"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textStyle="italic" />

        </com.google.android.material.textfield.TextInputLayout>
        <!-- full name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fullname_layout"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/emailAddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/full_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvfullname"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <!-- Gender -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gender_layout"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname_layout"
            android:layout_centerHorizontal="true">
            <TextView
                android:text="@string/user_gender"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date of Birth -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dob_layout"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/user_date_of_birth"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDob"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Country -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country_layout"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_below="@id/dob_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/user_country"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvcountry"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- State -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/state_layout"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/country_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/user_state"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvState"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Address_layout"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_below="@id/state_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/user_residential_address"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvAddress"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- User Roles -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userType_layout"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_below="@id/Address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/my_role"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvUserRole"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>



        <!-- Button Update, Back -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/button_layout"
            android:layout_below="@id/userType_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_BACK"
                android:text="@string/back"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

</ScrollView>