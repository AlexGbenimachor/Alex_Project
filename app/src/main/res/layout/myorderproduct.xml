<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_EDIT_DRUG_TITLE"
        android:text="MY ORDER"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/userTv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_EDIT_DRUG_TITLE"
        android:layout_margin="10dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:hint="please enter product name"
        tools:ignore="TouchTargetSizeCheck" />

    <ListView
        android:id="@+id/myorderListView"
        android:layout_margin="10dp"
        android:layout_below="@id/userTv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>