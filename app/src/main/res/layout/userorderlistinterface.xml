<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/purple_700"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/orderImage_productLayout"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="8dp">
    <ImageView
        android:id="@+id/orderImage_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/drugProductImage"
        android:src="@drawable/druglogo"
        tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/orderProductID_tv"
        android:layout_margin="5dp"
        android:text="ID:"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="invisible"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/orderCartID_tv"
        android:layout_margin="5dp"
        android:text="CARTID:"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_below="@id/orderProductID_tv"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/orderProductName_tv"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="name"
        android:textSize="11sp"
        android:layout_below="@id/orderCartID_tv"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/orderProductPrice_tv"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="Price:"
        android:textSize="11sp"
        android:layout_below="@id/orderProductName_tv"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/orderProductQuantity_tv"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="Qty:"
        android:textSize="11sp"
        android:layout_below="@id/orderProductPrice_tv"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/orderProductQty_tv"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"
        android:layout_below="@id/orderProductPrice_tv"
        android:layout_toEndOf="@id/orderProductQuantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/orderProductQunt_tv"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="11sp"
        android:layout_below="@id/orderProductQty_tv"
        android:layout_toEndOf="@id/orderImage_productLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/orderProductDesc_tv"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="description"
        android:textSize="11sp"
        android:visibility="invisible"
        android:layout_below="@id/orderProductQuantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_RemoveOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_below="@id/orderProductDesc_tv"
        android:layout_margin="10dp"
        android:text="Remove"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_OrderNow"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_margin="10dp"
        android:text="Confirm Order"
        android:layout_below="@id/btn_RemoveOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







</RelativeLayout>